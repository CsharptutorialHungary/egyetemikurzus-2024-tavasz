
<MudStack>
    <MudPaper Class="pa-3">
        <MudText>Username: @userViewModel.Username</MudText>
    </MudPaper>
    <MudPaper Class="pa-3">
        <MudText>Surname: @((userViewModel.SurName != null) ? userViewModel.SurName : "Not Specified")</MudText>
    </MudPaper>
    <MudPaper Class="pa-3">
        <MudText>LastName: @((userViewModel.LastName != null) ? userViewModel.LastName : "Not Specified")</MudText>
    </MudPaper>
    <MudPaper Class="pa-3">
        <MudText>School: @((userViewModel.School != null) ? userViewModel.School : "Not Specified")</MudText>
    </MudPaper>
    <MudPaper Class="pa-3">
        <MudText>Workplace: @((userViewModel.Workplace != null) ? userViewModel.Workplace : "Not Specified")</MudText>
    </MudPaper>
</MudStack>
<MudSpacer></MudSpacer>
<MudStack>
    <MudPaper Class="ma-2" Style="width:fit-content; height:fit-content">
        <MudIconButton OnClick="@(() => OpenProfileEditDialog())" Color="Color.Inherit" Icon="@Icons.Material.Filled.Edit"></MudIconButton>
    </MudPaper>
    <MudPaper Class="ma-2" Style="width:fit-content; height:fit-content">
        <MudIconButton OnClick="@(() => OpenPostUploadDialog())" Color="Color.Inherit" Icon="@Icons.Material.Filled.Add"></MudIconButton>
    </MudPaper>
    <MudPaper Class="ma-2" Style="width:fit-content; height:fit-content">
        <MudIconButton OnClick="@(() => OpenGroupAddDialog())" Color="Color.Inherit" Icon="@Icons.Material.Filled.GroupAdd"></MudIconButton>
    </MudPaper>
</MudStack>
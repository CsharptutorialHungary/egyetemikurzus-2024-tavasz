@page "/Profile"

<MudText Typo="Typo.h4">Profile</MudText>
<MudGrid Spacing="5" Justify="Justify.FlexStart">
    <MudItem xs="6">
        <MudPaper class="mud-paper">
            <MudText Typo="Typo.h6" Color="Color.Primary">General information</MudText>
            <MudTextField @bind-Value="userViewModel.ShortName" Margin="Margin.Dense" Label="Username" ReadOnly="true" Variant="Variant.Outlined"></MudTextField>
            <MudTextField @bind-Value="userViewModel.SurName" Margin="Margin.Dense" Label="Surname" ReadOnly="true" Variant="Variant.Outlined"></MudTextField>
            <MudTextField @bind-Value="userViewModel.LastName" Margin="Margin.Dense" Label="Lastname" ReadOnly="true" Variant="Variant.Outlined"></MudTextField>
            <MudTextField @bind-Value="userViewModel.BirthYear" Margin="Margin.Dense" Label="Birthyear" ReadOnly="true" Variant="Variant.Outlined"></MudTextField>
            <MudTextField @bind-Value="userViewModel.BirthMonth" Margin="Margin.Dense" Label="Birthmonth" ReadOnly="true" Variant="Variant.Outlined"></MudTextField>
            <MudTextField @bind-Value="userViewModel.BirthDay" Margin="Margin.Dense" Label="Birthday" ReadOnly="true" Variant="Variant.Outlined"></MudTextField>
        </MudPaper>
    </MudItem>
    <MudItem xs="6">
        <MudPaper class="mud-paper">
            <MudText Typo="Typo.h6" Color="Color.Primary">Business information</MudText>
            <MudTextField @bind-Value="userViewModel.Workplace" Margin="Margin.Dense" Label="Workplace" ReadOnly="true" Variant="Variant.Outlined"></MudTextField>
            <MudTextField @bind-Value="userViewModel.School" Margin="Margin.Dense" Label="School" ReadOnly="true" Variant="Variant.Outlined"></MudTextField>
        </MudPaper>
    </MudItem>
    <MudItem xs="3">
        <MudPaper Height="140px" Width="140px">

        </MudPaper>
    </MudItem>
</MudGrid>

@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ISnackbar Snackbar
@inject ProtectedSessionStorage ProtectedSessionStore
@inject NavigationManager navmanager

<MudItem>
    <MudCard>
        <MudCardContent>
            <MudForm>
                <MudTextField @bind-Value="Email" Placeholder="Email"></MudTextField>
                <MudTextField InputType="InputType.Password" @bind-Value="Password" Placeholder="Password"></MudTextField>
            </MudForm>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@(async () => await Submit())">Login</MudButton>
        </MudCardActions>
    </MudCard>
</MudItem>